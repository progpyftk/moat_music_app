<h1>Add New Album</h1>
<div class="form-outline mb-4">
  <%= form_with(model: @album, local: true, class: 'form-control') do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :name, class: 'form-label'  %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :artist, class: 'form-label'  %>
    <%= f.text_field :artist, class: 'form-control' %>
    <%= f.label :year, class: 'form-label' %>
    <%= f.password_field :year, class: 'form-control' %>
    <%= f.submit "Add Album", class: "form-control btn btn-primary btn-block" %>
  <% end %>
</div>
