<h1>Add New Album</h1>
<div>
  <%= form_with(model: @album, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :name, class: 'form-label'  %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :year, class: 'form-label' %>
    <%= f.text_field :year, class: 'form-control' %>
    <label for="selectbox" class='form-label'>Choose an artist from the list: </label>
    <%= f.select :artist, @artist_list, {} ,class:'form-select form-select-sm', id:'selectbox' %>
    <%= f.submit "Add Album", class: "form-control btn btn-primary btn-block" %>
  </div>
<% end %>
</div>
