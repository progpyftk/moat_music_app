<h1>Sign up</h1>
<div class="d-grid gap-3">
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="p-4 bg-light border">
      <div class="p-2"><%= f.label :name, class: 'form-label'%></div>
      <%= f.text_field :name, class: 'form-control' %>
      <div class="p-2"><%= f.label :username, class: 'form-label'%></div>
      <%= f.text_field :username, class: 'form-control' %>
      <div class="p-2"><%= f.label :password, class: 'form-label'%></div>
      <%= f.password_field :password, class: 'form-control'%>
      <div class="p-2"><%= f.label :password_confirmation, "Confirmation", class: 'form-label'%></div>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <div class="p-4">
        <%= f.submit "Create my account", class: "form-control btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
